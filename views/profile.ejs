    <div class="col-sm-6">
      <h3>Orders</h3>
      <ul class="orders">
        <% for(var i=0; i<orders.length; i++) {%>
        <% if(orders[i].complete === false) { %>
        <li class="orders">

          <span>
            <%= orders[i].name %></span>
          <span>
            <%= orders[i].msg %></span>
          <span>
            <%= orders[i].complete %></span>
          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          <% } %>
          <% } %>
        </li>
      </ul>
    </div>

    <div class="col-sm-6">
      <h3>Completed Orders</h3>
      <ul class="orders">
        <% for(var i=0; i<orders.length; i++) {%>

        <% if(orders[i].complete === true) { %>
        <li class="orders">
          <span>
            <%= orders[i].name %></span>
          <span>
            <%= orders[i].msg %></span>
          <span><i class="fa fa-thrash" aria-hidden="true"></i></span>
        </li>
        <% } %>
        <% } %>
